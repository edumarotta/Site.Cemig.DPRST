    ViewBag.Title = "SaudeTrabalho";
}


<div class="container">
    <div class="jumbotron">
        <h1 class="display-4">Saúde no Trabalho</h1>
        <p class="lead">S de Saúde - Tudo que você precisa saber!</p>
        <hr class="my-2">

    </div>
