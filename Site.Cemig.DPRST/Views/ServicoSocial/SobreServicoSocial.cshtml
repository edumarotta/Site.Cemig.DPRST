
@{
    ViewBag.Title = "SobreServicoSocial";
}

<div class="container">
    <div class="jumbotron">
        <h1 class="display-4">Serviço Social</h1>
        <p class="lead">Informações sobre a Assitência Social da CEMIG</p>
        <hr class="my-2">

    </div>
</div>


<!-- #Cards -->

<div class="container">
    <div class="row">
        <div class="col-sm-4">
            <div class="card" style="width: 22rem;">
                <div class="border border-success">
                    <img class="card-img-top efeitoOpc" src="~/img/assistencia_social.jpg" alt="Imagem de capa do card">
                    <div class="card-body">
                        <h5 class="card-title">Atribuições</h5>
                        <p class="card-text">Responsabilidades do profissional</p>
                        <br>
                        <br>
                        @Html.ActionLink("Visitar", "AtributosServicoSocial", "ServicoSocial", new { @class = "btn btn-primary" })
                        
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4">
