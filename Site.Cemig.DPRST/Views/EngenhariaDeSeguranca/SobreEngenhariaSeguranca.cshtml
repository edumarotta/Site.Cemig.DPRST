                    <div class="card-body">
                        <h5 class="card-title">Atribuições</h5>
                        <p class="card-text">Veja aqui as Responsabilidades do Núcleo GESET</p>
                        <br>
                        @Html.ActionLink("Visitar", "AtribuicoesEngenharia", "EngenhariaDeSeguranca", new { @class = "btn btn-primary" })

                    </div>
                </div>
            </div>
        </div>
